local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

local Window = Rayfield:CreateWindow({
    Name            = "Lukman",
    LoadingTitle    = "Rayfield Terbaik",
    LoadingSubtitle = "by Lukman",
    ToggleUIKeybind = Enum.KeyCode.K,
    ConfigurationSaving = {
        Enabled   = false,
        FolderName= nill,
        FileName  = "Lukmangans"
    }
})

local MainTab     = Window:CreateTab("Main", nil)
local MainSection = MainTab:CreateSection("🎣")

local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Players           = game:GetService("Players")

local net = ReplicatedStorage:WaitForChild("Packages")
    :WaitForChild("_Index")
    :WaitForChild("sleitnick_net@0.2.0")
    :WaitForChild("net")

local player     = Players.LocalPlayer

MainTab:CreateToggle({
    Name          = "MancingV1 Mang",
    CurrentValue  = false,
    Flag          = "AutoFishV1Toggle",
    Callback      = function(on)
        _G.FISHV1 = on

        while _G.FISHV1 do

local vim =
game:GetService("VirtualInputManager")
local button = game:GetService("Players").LocalPlayer.PlayerGui.HUD.MobileFishingButton
local pos = button.AbsolutePosition
local size = button.AbsoluteSize
local x = pos.X + size.X / 1
local y = pos.Y + size.Y / 1

    pcall(function()
        vim:SendMouseButtonEvent(x, y, 0, true, button, 1)
        vim:SendMouseButtonEvent(x, y, 0, false, button, 1)
end)
              task.wait()
        end
    end
})

MainTab:CreateToggle({
    Name = "MancingV2 Mang",
    CurrentValue  = false,
    Flag          = "AutoMancingV2Toggle",
    Callback      = function(on)
           _G.Lemper = on
         while _G.Lemper do
           net:WaitForChild("RF/ChargeFishingRod"):InvokeServer()
net:WaitForChild("RF/RequestFishingMinigameStarted"):InvokeServer(unpack(1, 0, 0))
net:WaitForChild("RE/FishingCompleted"):FireServer()

         task.wait()
       end
     end
}) 

local Button = MainTab:CreateButton({
   Name = "Debug pancing",
   Callback = function()
   net:WaitForChild("RF/CancelFishingInputs"):InvokeServer()
   end,
})

local AutoTab     = Window:CreateTab("Auto", nil)
local AutoSection = AutoTab:CreateSection("🔁")

AutoTab:CreateToggle({
    Name          = "Auto Sell Mang",
    CurrentValue  = false,
    Flag          = "AutoSellToggle",
    Callback      = function(on)
        _G.SELL = on

        while _G.SELL do
            net:WaitForChild("RF/SellAllItems"):InvokeServer()
            task.wait(_G.SellDelay)
        end
    end
})

local Input = AutoTab:CreateInput({
   Name = "Delay nya mang",
   CurrentValue = "",
   PlaceholderText = "Masukin Mang",
   RemoveTextAfterFocusLost = false,
   Flag = "Setting Delay Sell",
   Callback = function(Text)
        local num = tonumber(Text)
        if num and num >= 0.01 then
        _G.SellDelay = num
     end
   end
})

AutoTab:CreateToggle({
    Name          = "Auto Weather☁️+✨ Mang",
    CurrentValue  = false,
    Flag          = "AutoWeatherToggle",
    Callback      = function(on)
        _G.WEATHER = on

        while _G.WEATHER do
            net:WaitForChild("RF/PurchaseWeatherEvent"):InvokeServer("Cloudy")
            net:WaitForChild("RF/PurchaseWeatherEvent"):InvokeServer("Radiant")
            task.wait(_G.WeatherDelay)
        end
    end
})

local Input = AutoTab:CreateInput({
   Name = "Delay nya mang",
   CurrentValue = "",
   PlaceholderText = "Masukin Mang",
   RemoveTextAfterFocusLost = false,
   Flag = "Setting Delay Weather",
   Callback = function(Text)
        local num = tonumber(Text)
        if num and num >= 0.01 then
        _G.WeatherDelay = num
     end
   end
})
